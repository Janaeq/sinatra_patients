<h1 style="border-bottom:solid;"><%=@patient.name%></h1><br>

<form method="POST" action="/patients/<%=@patient.id%>">
    <input type="hidden" name="_method" value="patch"> <!-- this uses Rack Override method to override the post request in the form tag with the patch request here -->
    <label>Name: </label>
    <input type="text" name="name" value="<%=@patient.name%>"><br><br>
    <label>Address: </label>
    <input type="text" name="address" value="<%=@patient.address%>"><br><br>
    <label>Insurance: </label>
    <input type="text" name="insurance" value="<%=@patient.insurance%>"><br><br>
    <label>Medications: </label>
    <input type="text" name="medications" value="<%=@patient.medications%>"><br><br>
    <input type="submit" value="Save">
</form>