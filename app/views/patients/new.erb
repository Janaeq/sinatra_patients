<h1 style="border-bottom:solid;">Create a New Patient</h1><br>
<% if flash[:error] %>
<h5 style="color:red;"><em><%= flash[:error] %></h6></em>
<br>
<%end%>
<form method="POST" action="/patients">
    <label>Name: </label>
    <input type="text" name="name"><br><br>
    <label>Address: </label>
    <input type="text" name="address"><br><br>
    <label>Insurance: </label>
    <input type="text" name="insurance"><br><br>
    <label>Diagnosis: </label>
    <input type="text" name="diagnosis"><br><br>
    <label>Medications: </label>
    <input type="text" name="medications"><br><br>
    <input type="hidden" name="doctor_id" value="<%="#{@doctor.id}"%>" readonly="readonly"><br>
    <input type="submit" value="Save">
</form>
<br><br>
<a href="/doctors/<%=@doctor.id%>/patients" style="color:black; float:left">Back</a>