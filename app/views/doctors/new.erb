<!-- takes new info and saves it into the database -->
<h1 style="border-bottom:solid;">Create a New Provider</h1><br>
<% if flash[:error] %>
<h5 style="color:red;"><em><%= flash[:error] %></h6></em>
<br>
<%end%>
<form method="POST" action="/doctors">
    <label>Name: </label>
    <input type="text" name="name"><br><br>
    <label>Specialty: </label>
    <input type="text" name="specialty"><br><br>
    <label>Clinic Days: </label>
    <input type="text" name="clinic_days"><br><br>
    <label>Clinic Location: </label>
    <input type="text" name="clinic_location"><br><br>
    <label>On Call: </label>
    <input type="text" name="on_call_days"><br><br>
    <input type="hidden" name="user_id" value="<%="#{@user_id}"%>" readonly="readonly"><br>
    <input type="submit" value="Save">
</form>
<br><br>
<a href="/user/<%=@user_id%>/doctors" style="color:black; float:left">Back</a>